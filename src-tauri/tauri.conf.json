{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Imagio",
  "version": "1.0.0",
  "identifier": "com.imagio.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Imagio - OCR Application",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "center": true
      }
    ],
    "security": {
      "_comment_csp": "CSP disabled: allows loading remote images from BFL API and flexible LLM endpoint configuration. All network requests are user-initiated. Consider enabling CSP with appropriate allowlist in production.",
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "_comment_scope": "Wide scope needed for loading processed images from temp directory",
        "scope": ["**"]
      },
      "capabilities": [
        {
          "identifier": "default",
          "windows": ["main"],
          "_comment_permissions": "Broad filesystem permissions required for: (1) saving OCR results to user-selected locations, (2) writing temp files to system temp dir, (3) auto-saving generated images. User always controls file locations through dialogs or settings.",
          "permissions": [
            "core:default",
            "dialog:default",
            "fs:default",
            "fs:allow-write-file",
            "fs:write-all",
            "clipboard-manager:default",
            "clipboard-manager:allow-write-image",
            {
              "identifier": "http:default",
              "allow": [
                {
                  "url": "https://**"
                },
                {
                  "url": "http://**"
                }
              ]
            }
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": false,
    "macOS": {
      "minimumSystemVersion": "10.13",
      "files": {
        "Resources/Assets.car": "resources/Assets.car"
      }
    }
  },
  "plugins": {
    "updater": {
      "active": false
    }
  }
}
