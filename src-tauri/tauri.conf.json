{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Imagio",
  "version": "1.0.0",
  "identifier": "com.imagio.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Imagio - OCR Application",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      },
      "capabilities": [
        {
          "identifier": "default",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "dialog:default",
            "fs:default",
            "fs:allow-write-file",
            "fs:allow-read-file",
            "fs:allow-read",
            "fs:allow-create",
            "fs:allow-write",
            "fs:allow-mkdir",
            "fs:allow-exists",
            "fs:allow-remove",
            "fs:write-all",
            "clipboard-manager:default",
            "clipboard-manager:allow-write-image",
            "core:path:default",
            "core:image:default",
            {
              "identifier": "fs:scope",
              "allow": [
                { "path": "$HOME/**" },
                { "path": "$DESKTOP/**" },
                { "path": "$DOCUMENT/**" },
                { "path": "$PICTURE/**" },
                { "path": "$DOWNLOAD/**" },
                { "path": "$APPLOCALDATA/**" },
                { "path": "$APPLOCALDATA" },
                { "path": "$APPDATA/**" },
                { "path": "$APPDATA" }
              ]
            },
            {
              "identifier": "http:default",
              "allow": [
                {
                  "url": "https://**"
                },
                {
                  "url": "http://**"
                }
              ]
            }
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": false,
    "macOS": {
      "minimumSystemVersion": "10.13",
      "files": {
        "Resources/Assets.car": "resources/Assets.car"
      }
    }
  },
  "plugins": {
    "updater": {
      "active": false
    }
  }
}
