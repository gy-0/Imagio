{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "fs:default",
    "fs:allow-create",
    "fs:allow-write",
    "fs:allow-write-file",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$PICTURE/**" },
        { "path": "$DOWNLOAD/**" }
      ]
    },
    "core:path:default",
    "core:image:default",
    "clipboard-manager:allow-write-image",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://*.bfl.ai/*" }
      ]
    }
  ]
}
